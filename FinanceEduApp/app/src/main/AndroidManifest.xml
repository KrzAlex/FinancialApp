<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.financeeduapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FinanceEduApp">

        <!-- LoginActivity is the launcher -->
        <activity
            android:name=".activities.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Home screen activity -->
        <activity android:name=".activities.HomeActivity" />

        <!-- Placeholder activity -->
        <activity android:name=".MainActivity" />

        <!-- Compound interest calculator -->
        <activity android:name=".activities.CalculatorActivity" />

        <!-- Profile -->
        <activity android:name=".activities.ProfileActivity" />

        <!-- Settings -->
        <activity android:name=".activities.SettingsActivity" />

        <!-- âœ… Forgot Password Activity -->
        <activity android:name=".activities.ForgotPasswordActivity" />

        <activity android:name=".activities.LessonsActivity" />

    </application>

</manifest>
